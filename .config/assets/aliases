# Aliases

## If exa is installed, 'use' it instead of ls
if [[ $(which exa) ]] 2>/dev/null; then
    alias ls='exa --header --group --accessed --modified --created --links --inode --blocks --header'
    alias ll='ls --long'
else
    alias ls='ls -hG'
    alias ll='ls -l'
fi

## if bat is installed, 'use' it instead of cat
if [[ $(which bat) ]] 2>/dev/null; then
    alias cat='bat'
fi

alias grep='grep --color'
alias less='less -rf'
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
