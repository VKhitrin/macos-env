# Aliases

## If exa is installed, 'use' it instead of ls
if [[ $(which exa) ]]; then
    alias ls='exa --header --group --accessed --modified --created --links --inode --blocks --header'
    alias ll='ls --long'
else
    alias ls='ls -hG'
    alias ll='ls -l'
fi

alias gdrive='cd /Volumes/GoogleDrive/My\ Drive'
alias onedrive='cd $(defaults read com.microsoft.OneDrive | grep NSNavLastRoot | sed -e "s/.*\(\/Volumes.*\)\"\;/\1\/OneDrive/")'
alias go_back='cd $OLDPWD'
alias less='less -rf'
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
which thefuck > /dev/null && eval $(thefuck --alias)
